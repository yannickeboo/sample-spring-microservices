 pipeline {
    agent any
    environment{
        VERSION = "${env.BUILD_ID}"
        IMAGE_NAME = "yannickeboo"
    }
    stages {
        stage('Build') { 
            steps {
                sh 'mvn -B -DskipTests clean package' 
            }
        }
     stage('docker image') {
      steps {
       sh 'docker build . -t $IAMGE_NAME/test:app1-$VERSION -f account-service/Dockerfile'
       withDockerRegistry([ credentialsId: "Docker_hub", url: "" ]) {
       sh 'docker push $IMAGE_NAME/test:app1-$VERSION'
        }
       
        
     
         
      }
     }
    }
}

 pipeline {
    agent any
    environment{
        VERSION = "${env.BUILD_ID}"
    }
    stages {
        stage('Build') { 
            steps {
                sh 'mvn -B -DskipTests clean package' 
            }
        }
       stage('docker image'){
        steps{
         dir('/account-service/'){
            sh 'docker build -t yannickeboo:${VERSION} -f Dockerfile ./account-service'
            sh 'docker login -u yannickeboo:${VERSION} -p $docker_yann'
                              
         }           
        
             }
     }
    }
}

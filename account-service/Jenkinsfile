 pipeline {
    agent any
    environment{
        VERSION = "${env.BUILD_ID}"
    }
    stages {
        stage('Build') { 
            steps {
                sh 'mvn -B -DskipTests clean package' 
            }
        }
     stage('docker image') {
      steps {
       sh 'docker build . -t yannickeboo/test:app1-$VERSION -f account-service/Dockerfile'
       sh 'docker login -u "yannickeboo" -p "Airfrance.123" docker.io'
       sh 'docker push yannickeboo/test:app1-$VERSION'
        
     
         
      }
     }
    }
}

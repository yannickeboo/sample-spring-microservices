 pipeline {
    agent any
    environment{
        VERSION = "${env.BUILD_ID}"
    }
    stages {
        stage('Build') { 
            steps {
                sh 'mvn -B -DskipTests clean package' 
            }
        }
       stage('docker image'){
        steps{
         dir('/account-service/'){
            sh '''
                                docker build -t yannickeboo:${VERSION} .
                                docker login -u yannickeboo -p $docker_yann
                              
                            '''
        }
             }
     }
    }
}

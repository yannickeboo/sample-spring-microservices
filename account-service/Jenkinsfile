 pipeline {
    agent any
    environment{
        VERSION = "${env.BUILD_ID}"
        IMAGE_NAME = "anaeleboo"
    }
    stages {
        stage('Build') { 
            steps {
                sh 'mvn -B -DskipTests clean package' 
            }
        }
     stage('docker image') {
      steps {
       sh 'docker build . -t $IMAGE_NAME:app1-$VERSION -f account-service/Dockerfile'
       withDockerRegistry([ credentialsId: "Docker_hub", url: "https://hub.docker.com/repository/docker/yannickeboo" ]) {
       sh 'docker push $IMAGE_NAME:app1-$VERSION'
        }
       
        
     
         
      }
     }
    }
}
